<!doctype html>
<html lang="{{ locale }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">
		<!-- Favicons -->
		<link href="/assets/img/favicon.png" rel="icon">
		<link href="/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

		<!-- Fonts -->
		<link href="https://fonts.googleapis.com" rel="preconnect">
		<link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

		<!-- Vendor CSS Files -->
		<link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
		<link href="/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
		<link href="/assets/vendor/aos/aos.css" rel="stylesheet">
		<link href="/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
		<link href="/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

		<!-- Main CSS File -->
		<link href="/assets/css/main.css" rel="stylesheet">

	</head>
	<body class="index-page">
		<a href="#skip" class="visually-hidden">Skip to main content</a>

		<header id="header" class="header fixed-top">

		<div class="topbar d-flex align-items-center">
			<div class="container d-flex justify-content-center justify-content-md-between">
				<div class="contact-info d-flex align-items-center">
					<i class="bi bi-envelope d-flex align-items-center"><a href="mailto:{{ metadata.contact.email }}">{{ metadata.contact.email }}</a></i>
					<i class="bi bi-phone d-flex align-items-center ms-4"><span>{{ metadata.contact.phone }}</span></i>
				</div>
				<div class="languages d-none d-md-flex align-items-center">
					<ul>
						<li><a href="#">Français</a></li>
						<li>English</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="branding d-flex align-items-cente">

			<div class="container position-relative d-flex align-items-center justify-content-between">
				<a href="/{{ locale }}/" class="logo d-flex align-items-center me-auto me-xl-0">
					<h1 class="sitename">{{ metadata.companyName }}</h1>
				</a>

			<nav id="navmenu" class="navmenu">
				<ul>
					{%- for entry in collections.all | eleventyNavigation %}
					<li class="nav-item"><a href="{{ entry.url }}" {% if entry.url==page.url %} class="active" aria-current="page" {% endif %}>{{ entry.title }}</a></li>
					{%- endfor %}
				</ul>
				<i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
			</nav>

			<a class="btn-book-a-table d-none d-xl-block" href="#">Book a Table</a>

			</div>

			</div>

		</header>

		<main id="skip" class="main">
				{{ content | safe }}
		</main>

	<footer id="footer" class="footer">

		<div class="container footer-top">
			<div class="row gy-4">
				<div class="col-12 footer-about text-center">
					<a href="index.html" class="logo d-flex align-items-center justify-content-center">
						<span class="sitename">{{ metadata.companyName }}</span>
					</a>
				</div>

				<div class="col-lg-4 col-md-6 footer-contact">
					<h4>Contact Us</h4>
					<p>
						<strong>Address:</strong> {{ metadata.address.street }}, {{ metadata.address.city }}, {{ metadata.address.province }} {{ metadata.address.postalCode }}<br>
						<strong>Phone:</strong> {{ metadata.contact.phone }}<br>
						<strong>Email:</strong> <a href="mailto:{{ metadata.contact.email }}">{{ metadata.contact.email }}</a><br>
					</p>
				</div>


				<div class="col-lg-4 col-md-12 footer-social">
					<h4>Follow Us</h4>
					<ul class="social-links d-flex">
						{% for key, value in metadata.social %}
						<li><a href="{{ value.url }}"><i class="bi bi-{{ value['font-icon'] }}"></i></a></li>
						{% endfor %}
					</ul>
				</div>

			</div>
		</div>

		<div class="container copyright text-center mt-4">
			<p>© <span>Copyright</span> <strong class="px-1 sitename">{{ metadata.companyName }}</strong> <span>All Rights Reserved</span></p>
			<div class="credits">
				<!-- All the links in the footer should remain intact. -->
				<!-- You can delete the links only if you've purchased the pro version. -->
				<!-- Licensing information: https://bootstrapmade.com/license/ -->
				<!-- Purchase the pro version with working PHP/AJAX contact form: [buy-url] -->
				Accessible site by <span>Média Plansmash Media</span>
			</div>
		</div>

	</footer>

		<!-- Vendor JS Files -->
		<script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
		<script src="/assets/vendor/php-email-form/validate.js"></script>
		<script src="/assets/vendor/aos/aos.js"></script>
		<script src="/assets/vendor/glightbox/js/glightbox.min.js"></script>
		<script src="/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
		<script src="/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
		<script src="/assets/vendor/swiper/swiper-bundle.min.js"></script>

		<!-- Main JS File -->
		<script src="/assets/js/main.js"></script>

	</body>
</html>
